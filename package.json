{
  "name": "trampo",
  "version": "0.1.0",
  "description": "Configurable job scheduler through well know file formats",
  "main": "trampo",
  "scripts": {
    "build": "rimraf ./bin && webpack -p --progress --colors",
    "build:ts": "rimraf ./dist && tsc -p tsconfig.json --sourcemap --strict",
    "build:watch": "npm run build:ts -- -w",
    "lint": "tsc --project tsconfig.json --noEmit && tslint -c tslint.json -p tsconfig.json src/**/*.ts --fix",
    "release:minor": "standard-version --no-verify --release-as minor",
    "release:major": "standard-version --no-verify --release-as major",
    "release:patch": "standard-version --no-verify --release-as patch",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "test:tdd": "npm test -- --watch --watch-extensions ts",
    "test:coverage": "rimraf ./coverage && nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MutterPedro/trampo.git"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "node_modules/**/*",
      "**/*.d.ts",
      "bin/**",
      "dist/**/*",
      "*.js"
    ],
    "all": true,
    "cache": true,
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "per-file": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "npm run lint"
      ],
      "*.{ts,md}": [
        "prettier --list-different"
      ]
    },
    "ignore": [
      "**/dist/*",
      "**/bin/*",
      "**/coverage/*",
      "**/node_modules/*",
      "**/tests/**/*",
      "package.json",
      "package-lock.json"
    ]
  },
  "keywords": [
    "job",
    "worker",
    "scheduler",
    "configurable",
    "cron",
    "easy"
  ],
  "author": "Pedro Mutter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MutterPedro/trampo/issues"
  },
  "preferGlobal": true,
  "bin": {
    "trampo": "bin/index.js"
  },
  "files": [
    "bin"
  ],
  "homepage": "https://github.com/MutterPedro/trampo#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.1.7",
    "@types/cron": "^1.7.1",
    "@types/expect": "^1.20.4",
    "@types/faker": "^4.1.5",
    "@types/hapi__joi": "^15.0.3",
    "@types/mocha": "^5.2.7",
    "@types/pino": "^5.8.8",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "dotenv": "^8.0.0",
    "faker": "^4.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "pino-pretty": "^3.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "ts-loader": "^6.0.4",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "axios": "^0.19.0",
    "commander": "^2.20.0",
    "cron": "^1.7.1",
    "pino": "^5.13.1"
  }
}
