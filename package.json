{
  "name": "trampo",
  "version": "0.3.4",
  "description": "Configurable job scheduler through well know file formats",
  "main": "trampo",
  "scripts": {
    "build": "rimraf ./bin && webpack -p --progress --colors",
    "build:ts": "rimraf ./dist && tsc -p tsconfig.json --sourcemap --strict",
    "build:watch": "npm run build:ts -- -w",
    "lint": "tsc --project tsconfig.json --noEmit && tslint -c tslint.json -p tsconfig.json src/**/*.ts --fix",
    "release:minor": "standard-version --no-verify --release-as minor",
    "release:major": "standard-version --no-verify --release-as major",
    "release:patch": "standard-version --no-verify --release-as patch",
    "test": "mocha -r ts-node/register tests/**/*.test.ts --exit",
    "test:tdd": "npm run test -- --watch --watch-extensions ts",
    "test:coverage": "rimraf ./coverage && nyc npm run test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run lint && npm run test:coverage && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MutterPedro/trampo.git"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "node_modules/**/*",
      "**/*.d.ts",
      "bin/**",
      "dist/**/*",
      "*.js"
    ],
    "all": true,
    "cache": true,
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "per-file": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*test).ts": [
      "npm run lint"
    ],
    "*.{ts,md}": [
      "prettier --list-different"
    ]
  },
  "keywords": [
    "job",
    "worker",
    "scheduler",
    "configurable",
    "cron",
    "easy"
  ],
  "author": "Pedro Mutter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MutterPedro/trampo/issues"
  },
  "preferGlobal": true,
  "bin": {
    "trampo": "bin/trampo.js"
  },
  "files": [
    "bin"
  ],
  "homepage": "https://github.com/MutterPedro/trampo#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.11",
    "@types/cron": "^1.7.2",
    "@types/expect": "^24.3.0",
    "@types/faker": "^4.1.11",
    "@types/hapi__joi": "^16.0.12",
    "@types/mocha": "^7.0.2",
    "@types/pino": "^6.0.0",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shebang-loader": "0.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard-version": "^7.1.0",
    "ts-loader": "^7.0.2",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.19.2",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "cron": "^1.8.2",
    "pino": "^6.2.1",
    "pino-pretty": "^4.0.0"
  }
}
