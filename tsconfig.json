{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals":  true,
    "incremental": true,
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsBuildInfoFile",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
